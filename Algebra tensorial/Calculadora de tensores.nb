      RowBox[{"(", 
       RowBox[{
        RowBox[{"Sum", "[", 
         RowBox[{
          RowBox[{
           RowBox[{"invmetrica", "[", 
            RowBox[{"[", 
             RowBox[{"\[Alpha]", ",", "\[Sigma]"}], "]"}], "]"}], "*", 
           RowBox[{
            SubscriptBox["\[PartialD]", 
             RowBox[{"coord", "[", 
              RowBox[{"[", "\[Mu]", "]"}], "]"}]], 
            RowBox[{"metrica", "[", 
             RowBox[{"[", 
              RowBox[{"\[Sigma]", ",", "\[Nu]"}], "]"}], "]"}]}]}], ",", 
          RowBox[{"{", 
           RowBox[{"\[Sigma]", ",", "1", ",", "dim"}], "}"}]}], "]"}], 
        "\[IndentingNewLine]", "+", 
