           RowBox[{
            SubscriptBox["\[PartialD]", 
             RowBox[{"coord", "[", 
              RowBox[{"[", "\[Nu]", "]"}], "]"}]], 
            RowBox[{"metrica", "[", 
             RowBox[{"[", 
              RowBox[{"\[Mu]", ",", "\[Sigma]"}], "]"}], "]"}]}]}], ",", 
          RowBox[{"{", 
           RowBox[{"\[Sigma]", ",", "1", ",", "dim"}], "}"}]}], "]"}], 
        "\[IndentingNewLine]", "-", 
        RowBox[{"Sum", "[", 
         RowBox[{
          RowBox[{
           RowBox[{"invmetrica", "[", 
            RowBox[{"[", 
             RowBox[{"\[Alpha]", ",", "\[Sigma]"}], "]"}], "]"}], "*", 
           RowBox[{
            SubscriptBox["\[PartialD]", 
