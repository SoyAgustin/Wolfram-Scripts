Cell[TextData[{
 "El tensor de curvatura de Ricci es un tensor sim\[EAcute]trico absoluto de \
rango dos, es un subproducto del tensor de curvatura de Riemann y desempe\
\[NTilde]a un papel similar en la caracterizaci\[OAcute]n del espacio y la \
descripci\[OAcute]n de su curvatura.  ",
 Cell[BoxData[
  FormBox[
   TemplateBox[Association["boxes" -> FormBox[
       RowBox[{
         SubsuperscriptBox[
          StyleBox["R", "TI"], 
          RowBox[{
            StyleBox["b", "TI"], 
            StyleBox["a", "TI"], 
            StyleBox["d", "TI"]}], 
          StyleBox["a", "TI"]], "\[LongEqual]", 
         SubscriptBox[
          StyleBox["R", "TI"], 
          RowBox[{
            StyleBox["b", "TI"], 
            StyleBox["d", "TI"]}]]}], TraditionalForm], "errors" -> {}, 
     "input" -> "R_{bad}^{a}=R_{bd}", "state" -> "Boxes"],
    "TeXAssistantTemplate"], TraditionalForm]],ExpressionUUID->
  "dff9c7fa-c777-477d-a4e8-4f8af761c3a0"]
}], "Text",
 CellChangeTimes->{{3.8515456633848753`*^9, 3.8515456740652175`*^9}, {
  3.8522523779560385`*^9, 
  3.8522523787376013`*^9}},ExpressionUUID->"64e46b9a-32b5-4a93-96a1-\
3f54f5e03d82"],

Cell[BoxData[{
 RowBox[{"Do", "[", "\[IndentingNewLine]", 
  RowBox[{
   RowBox[{
    RowBox[{"Ric", "[", 
     RowBox[{"\[Alpha]", ",", "\[Beta]"}], "]"}], "=", "\[IndentingNewLine]", 
    RowBox[{
     RowBox[{"Sum", "[", 
      RowBox[{
       RowBox[{"D", "[", 
        RowBox[{
         RowBox[{"\[CapitalGamma]", "[", 
          RowBox[{"\[Delta]", ",", "\[Alpha]", ",", "\[Beta]"}], "]"}], ",", 
         RowBox[{"coord", "[", 
          RowBox[{"[", "\[Delta]", "]"}], "]"}]}], "]"}], ",", 
       RowBox[{"{", 
        RowBox[{"\[Delta]", ",", "1", ",", "dim"}], "}"}]}], "]"}], 
     "\[IndentingNewLine]", "-", 
     RowBox[{"Sum", "[", 
      RowBox[{
       RowBox[{"D", "[", 
        RowBox[{
         RowBox[{"\[CapitalGamma]", "[", 
          RowBox[{"\[Delta]", ",", "\[Alpha]", ",", "\[Delta]"}], "]"}], ",", 
         RowBox[{"coord", "[", 
          RowBox[{"[", "\[Beta]", "]"}], "]"}]}], "]"}], ",", 
       RowBox[{"{", 
        RowBox[{"\[Delta]", ",", "1", ",", "dim"}], "}"}]}], "]"}], 
     "\[IndentingNewLine]", "+", 
     RowBox[{"Sum", "[", 
      RowBox[{
       RowBox[{"Sum", "[", 
        RowBox[{
         RowBox[{
          RowBox[{"\[CapitalGamma]", "[", 
