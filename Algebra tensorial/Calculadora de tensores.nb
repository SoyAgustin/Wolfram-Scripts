Cell[TextData[{
 "El tensor de Riemann es un tensor de cuatro \[IAcute]ndices que proporciona \
una forma intr\[IAcute]nseca de describir la curvatura de una superficie. El \
tensor de Riemann de segunda clase se puede representar independientemente de \
la f\[OAcute]rmula ",
 Cell[BoxData[
  FormBox[
   TemplateBox[Association["boxes" -> FormBox[
       RowBox[{
         SubsuperscriptBox[
          StyleBox["R", "TI"], 
          RowBox[{
            StyleBox["c", "TI"], 
            StyleBox["r", "TI"], 
            StyleBox["s", "TI"]}], 
          StyleBox["a", "TI"]], "\[LongEqual]", 
         SubscriptBox["\[PartialD]", 
          StyleBox["r", "TI"]], 
         SubsuperscriptBox["\[CapitalGamma]", 
          RowBox[{
            StyleBox["s", "TI"], 
            StyleBox["c", "TI"]}], 
          StyleBox["a", "TI"]], "-", 
         SubscriptBox["\[PartialD]", 
          StyleBox["s", "TI"]], 
         SubsuperscriptBox["\[CapitalGamma]", 
          RowBox[{
            StyleBox["r", "TI"], 
            StyleBox["c", "TI"]}], 
          StyleBox["a", "TI"]], "+", 
         SubsuperscriptBox["\[CapitalGamma]", 
          RowBox[{
            StyleBox["r", "TI"], 
            StyleBox["b", "TI"]}], 
          StyleBox["a", "TI"]], 
         SubsuperscriptBox["\[CapitalGamma]", 
          RowBox[{
            StyleBox["s", "TI"], 
            StyleBox["c", "TI"]}], 
          StyleBox["b", "TI"]], "-", 
         SubsuperscriptBox["\[CapitalGamma]", 
          RowBox[{
            StyleBox["s", "TI"], 
            StyleBox["b", "TI"]}], 
          StyleBox["a", "TI"]], 
         SubsuperscriptBox["\[CapitalGamma]", 
          RowBox[{
            StyleBox["r", "TI"], 
            StyleBox["c", "TI"]}], 
          StyleBox["b", "TI"]]}], TraditionalForm], "errors" -> {}, "input" -> 
     "R_{crs}^{a}=\\partial _{r}\\Gamma _{sc}^{a}-\\partial _{s}\\Gamma \
_{rc}^{a}+\\Gamma _{rb}^{a}\\Gamma _{sc}^{b}-\\Gamma _{sb}^{a}\\Gamma \
_{rc}^{b}", "state" -> "Boxes"],
    "TeXAssistantTemplate"], TraditionalForm]],ExpressionUUID->
  "6d8f1114-3599-49a6-a3bd-2cf7bd19adef"],
 " .\nComo una observaci\[OAcute]n sobre este tensor, tenemos que por \
contracci\[OAcute]n del \[UAcute]ltimo \[IAcute]ndice se obtiene el \
denominado tensor de Ricci."
}], "Text",
 CellChangeTimes->{{3.8515456466762724`*^9, 3.851545670954322*^9}, {
  3.852250554860215*^9, 
  3.8522505552833767`*^9}},ExpressionUUID->"85a1b0b9-ff25-4e3e-9bbb-\
cf26ed51f364"],

Cell[BoxData[{
 RowBox[{"Do", "[", "\[IndentingNewLine]", 
  RowBox[{
   RowBox[{
    RowBox[{"Rie", "[", 
     RowBox[{"\[Alpha]", ",", "\[Beta]", ",", "\[Gamma]", ",", "\[Delta]"}], 
     "]"}], "=", "\[IndentingNewLine]", 
    RowBox[{
     RowBox[{"D", "[", 
      RowBox[{
       RowBox[{"\[CapitalGamma]", "[", 
        RowBox[{"\[Alpha]", ",", "\[Delta]", ",", "\[Beta]"}], "]"}], ",", 
       RowBox[{"coord", "[", 
        RowBox[{"[", "\[Gamma]", "]"}], "]"}]}], "]"}], "\[IndentingNewLine]",
      "-", 
     RowBox[{"D", "[", 
      RowBox[{
       RowBox[{"\[CapitalGamma]", "[", 
        RowBox[{"\[Alpha]", ",", "\[Gamma]", ",", "\[Beta]"}], "]"}], ",", 
       RowBox[{"coord", "[", 
        RowBox[{"[", "\[Delta]", "]"}], "]"}]}], "]"}], "\[IndentingNewLine]",
      "+", 
     RowBox[{"Sum", "[", 
      RowBox[{
       RowBox[{
