        RowBox[{"\[CapitalGamma]", "[", 
         RowBox[{"b", ",", "\[Gamma]", ",", "\[Beta]"}], "]"}]}], ",", 
       RowBox[{"{", 
        RowBox[{"b", ",", "1", ",", "dim"}], "}"}]}], "]"}]}]}], ",", 
   "\[IndentingNewLine]", 
   RowBox[{"{", 
    RowBox[{"\[Alpha]", ",", "1", ",", "dim"}], "}"}], ",", 
   RowBox[{"{", 
    RowBox[{"\[Beta]", ",", "1", ",", "dim"}], "}"}], ",", 
